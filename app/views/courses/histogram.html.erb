<p id="notice"><%= notice %></p>

<p>
  <strong>Course:</strong>
  <%= @course.course_id %>
</p>

<p>
  <strong>Name:</strong>
  <%= @course.name %>
</p>

<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %>
<br>
<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Percentage</th>
      <th>Lettergrade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enrolls.each do |enroll| %>
      <% if enroll.course_id == @course.course_id%>
        <tr>
          <td><%= enroll.student_id %></td>
          <td><%= enroll.percentage %></td>
          <td><%= enroll.lettergrade %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<p><%= link_to 'Set Grades', "/histogram/index"%></p>

